<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_height="fill_parent" 
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:padding="15dip"
    android:background="#0066FF">
	
	<TextView 
		android:id="@+id/id_about_title_label"
		android:text="@string/label_about_title_text" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" />
		
	<TextView
		android:id="@+id/id_about_text_label"
		android:text="@string/label_about_info_text" 
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent" />
	
	<Button
		android:id="@+id/id_about_exit_button" 
		android:text="@string/label_about_exit_button"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" />

</LinearLayout>